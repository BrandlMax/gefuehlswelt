<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.gefuehlswelt" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Gefuehlsewelt</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <config-file parent="NSMicrophoneUsageDescription" target="*-Info.plist">
            <string>"Hey, you will need the Mic for your thoughts"</string>
        </config-file>
        <config-file parent="NSSpeechRecognitionUsageDescription" target="*-Info.plist">
            <string>"Your voice is stronger than weapons"</string>
        </config-file>
    </platform>
    <engine name="browser" spec="^5.0.1" />
    <engine name="ios" spec="^4.5.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-speechrecognition" spec="^1.1.2" />
</widget>
